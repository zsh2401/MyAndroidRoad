<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_ys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐式intent to About" />
    <Button
        android:id="@+id/button_open_with_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用浏览器打开百度"/>
    <Button
        android:id="@+id/button_blog_with_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用WebView打开我的博客"/>

    <Button
    android:id="@+id/button_call_to_10086"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CALL TO 10086" />
    <Button
        android:id="@+id/button_start_single_instance_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动single instance启动模式的activity"/>
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK" />
    <Button
        android:id="@+id/button_finish_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="finish all activity"/>
</LinearLayout>
